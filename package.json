{
  "name": "boardroom-booking",
  "version": "1.0.0",
  "private": true,
  "description": "Boardroom booking system for medium-sized organizations",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev -w server",
    "dev:client": "npm run dev -w client",
    "build": "npm run build -w server && npm run build -w client",
    "build:server": "npm run build -w server",
    "build:client": "npm run build -w client",
    "start": "npm run start -w server",
    "db:migrate": "npm run db:migrate -w server",
    "db:generate": "npm run db:generate -w server",
    "db:seed": "npm run db:seed -w server",
    "test": "npm run test -w server && npm run test -w client",
    "lint": "npm run lint -w server && npm run lint -w client"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
